{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Amsterdam",
  "schedule": "before 5am every weekday",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    "group:allNonMajor",
    ":automergeMinor",
    ":automergePatch"
  ],
  "assignees": [
    "homelab-alpha"
  ],
  "rangeStrategy": "auto",
  "ignoreDeps": [],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "breaking change",
        "dependencies",
        "P0: critical"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "labels": [
        "dependencies",
        "P2: moderate"
      ]
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "labels": [
        "dependencies",
        "P3: low"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "automergeType": "squash"
    },
    {
      "matchPackageNames": [
        "hugo"
      ],
      "matchManagers": [
        "custom.regex"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": false,
      "automergeType": "squash"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.github/workflows/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "HUGO_VERSION:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "hugo",
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "gohugoio/hugo"
    }
  ]
}
